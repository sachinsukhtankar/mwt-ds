{
  "$schema": "http://schema.management.azure.com/schemas/2016-09-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "postfix": { "type": "string" }
  },
  "variables": {
    "name": "[concat('appinsights-', parameters('postfix'))]"
  },
  "resources": [
    {
      "apiVersion": "2014-04-01",
      "type": "Microsoft.Insights/components",
      "name": "[variables('name')]",
      "location": "eastus",
      "properties": {
        "mode": "incremental",
        "ApplicationId": "[concat('appinsights-', parameters('postfix'))]"
      }
    }
  ],
  "outputs": {
    "InstrumentationKey": {
      "type": "string",
      "value": "[reference(concat('microsoft.insights/components/', variables('name')), '2014-04-01').InstrumentationKey]"
    }
  }
}
